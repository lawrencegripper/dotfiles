#!/bin/bash

NAME=$1
echo "Opening codespace $NAME"
/home/linuxbrew/.linuxbrew/bin/gh cs code --codespace $NAME --insiders
# Copy auth details for atuin
/home/linuxbrew/.linuxbrew/bin/gh cs cp --codespace $NAME -e ~/.config/atuin_login 'remote:/workspaces/.atuin_login'
#                                                                                  atuin server               languagetool grammer/spellcheck
kitty bash -c "export TERM=xterm-256color; /home/linuxbrew/.linuxbrew/bin/gh codespace ssh --codespace $NAME -- -R 3123:100.102.135.78:80 -R 8123:localhost:8123"