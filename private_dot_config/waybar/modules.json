{
    "network": {
        "interval": 2,
        "format-wifi": "wlan {essid} {ipaddr}",
        "format-ethernet": "eth üì• {bandwidthDownBits} üì§ {bandwidthUpBits}",
        "tooltip-format": "{ifname} via {gwaddr}",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "{ifname} disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "cpu": {
        "format": "<span color='#ff79c6'>Óâ¶</span> {icon0} {icon1} {icon2} {icon3} {icon4} {icon5} {icon6} {icon7} Û∞ìÖ {avg_frequency}Ghz (min:{min_frequency} max:{max_frequency})",
        "format-icons": [
            "‚ñÅ",
            "‚ñÇ",
            "‚ñÉ",
            "‚ñÑ",
            "‚ñÖ",
            "‚ñÜ",
            "‚ñá",
            "‚ñà"
        ],
        "interval": 2,
        "tooltip": true,
        "tooltip-format": "CPU Usage: {usage}%",
        "on-click": "wezterm start htop",
        "color": "#8be9fd"
    },
    "load": {
        "interval": 2,
        "format": "üìà {load1} {load5} {load15}",
        "tooltip": true,
        "tooltip-format": "Load Average",
        "color": "#50fa7b"
    },
    "memory": {
        "format": "<span color='#ff79c6'>Û∞çõ</span> {used:0.1f}GB/{total:0.1f}GB",
        "tooltip": true,
        "tooltip-format": "Memory Usage: {percentage}%",
        "on-click": "alacritty -e htop",
        "color": "#ff79c6"
    },
    "battery": {
        "format": "{capacity}% {icon}",
        "format-icons": [
            "Û∞Çé",
            "Û∞Å∫",
            "Û∞Åª",
            "Û∞Åº",
            "Û∞ÅΩ",
            "Û∞Åæ",
            "Û∞Åø",
            "Û∞ÇÄ",
            "Û∞ÇÅ",
            "Û∞ÇÇ"
        ],
        "format-charging": "{capacity}% Û∞ÇÑ",
        "format-plugged": "{capacity}% Û∞ö•",
        "states": {
            "warning": 30,
            "critical": 15
        },
        "color": "#f1fa8c",
        "format-warning": "{capacity}% {icon}",
        "format-critical": "{capacity}% {icon}"
    },
    "temperature": {
        "critical-threshold": 80,
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": [
            "Û±ÉÉ",
            "Û∞îè",
            "Û±ÉÇ"
        ],
        "tooltip": true,
        "tooltip-format": "Temperature: {temperatureC}¬∞C",
        "color": "#bd93f9",
        "format-critical": "{temperatureC}¬∞C Û±ÉÇ"
    },
    "sway/mode": {
        "format": "<span color='#ff5555'>Ôçù MODE: {}</span>",
        "max-length": 50
    },
    "sway/workspaces": {
        "disable-scroll": false,
        "all-outputs": false,
        "format": "{name}",
        "format-icons": {
            "urgent": " !",
            "focused": "",
            "default": ""
        }
    },
    "custom/ghcal": {
        "exec": "$HOME/.config/waybar/calnot.py",
        "restart-interval": 120
    },
    "custom/ghpr": {
        "exec": "$HOME/.config/waybar/gh_pull_status.py",
        "return-type": "json",
        "restart-interval": 360
    },
    "custom/uptime-kuma": {
        "exec": "$HOME/.config/waybar/uptime-kuma.py",
        "return-type": "json",
        "restart-interval": 360
    },
    "custom/givenergy": {
        "exec": "$HOME/.config/waybar/givenergy.py",
        "return-type": "json",
        "tooltip-format": "{tooltip}",
        "on-click": "xdg-open http://givenergy.cloud/",
        "restart-interval": 360
    },
    "custom/ghstatus": {
        "exec": "$HOME/.config/waybar/ghstatus.py",
        "return-type": "json",
        "restart-interval": 360
    },
    "custom/power-profile": {
        "exec": "$HOME/.config/waybar/power_profile.py",
        "return-type": "json",
        "on-click": "$HOME/.config/waybar/power_profile.py click",
        "tooltip": true,
        "signal": 9
    },
    "custom/apt-updates": {
        "exec": "$HOME/.config/waybar/apt_updates.py",
        "return-type": "json",
        "tooltip": true,
        "on-click": "wezterm start -- bash -c 'update-linux; pkill -RTMIN+10 waybar'",
        "restart-interval": 3200,
        "signal": 10
    },
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
    "clock#pst": {
        "timezone": "America/Los_Angeles",
        "format": "üá∫üá∏ PST {:%H:%M}",
        "tooltip": true,
        "tooltip-format": "Los Angeles: {:%Y-%m-%d %H:%M:%S}"
    },
    "clock#est": {
        "timezone": "America/New_York",
        "format": "üá∫üá∏ EST {:%H:%M}",
        "tooltip": true,
        "tooltip-format": "New York: {:%Y-%m-%d %H:%M:%S}"
    },
    "clock#utc": {
        "timezone": "Etc/UTC",
        "format": "üåê UTC {:%H:%M}",
        "tooltip": true,
        "tooltip-format": "Coordinated Universal Time: {:%Y-%m-%d %H:%M:%S}"
    },
    "clock#berlin": {
        "timezone": "Europe/Berlin",
        "format": "üá©üá™ CET {:%H:%M}",
        "interval": 60,
        "tooltip": true,
        "tooltip-format": "Berlin: {:%Y-%m-%d %H:%M:%S}"
    },
    "clock": {
        "timezone": "Europe/London",
        "format": "üá¨üáß {:%H:%M:%S}",
        "tooltip": true,
        "tooltip-format": "London: {:%Y-%m-%d}",
        "interval": 1
    },
    "clock#date": {
        "format": "üìÜ {:%b %Y-%m-%d}",
        "tooltip": true,
        "tooltip-format": "London: {:%Y-%m-%d}"
    }
}